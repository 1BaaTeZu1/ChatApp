<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#474787"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-100dp"
        android:id="@+id/chatImages"
        android:background="@drawable/chatimages"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kullanıcı Adı Giriniz"
        android:textColorHint="#00d8d6"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/kullaniciAdiEditText"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00d8d6"
        android:textColor="#474787"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="Giriş Yap"
        android:id="@+id/btn_giris"/>



</LinearLayout>